<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- external css -->
  <link rel="stylesheet" href="../public/stylesheet/style.css">

  <!-- Bootstrap CSS -->

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <title>Blog</title>
</head>

<body>

  <!-- start navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="home">
        <img src="../public/images/icon/logo.png" alt="logo">
      </a>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="home">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active text-orange" aria-current="page" href="blog">Blog</a>
          </li>
        </ul>

        {{#if isLogin}}
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <span class="nav-link text-blue">hello, welcome {{user.name}}</span>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="logout">Logout</a>
          </li>
        </ul>
        {{else}}
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="register">Register</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="login">Login</a>
          </li>
        </ul>

        {{/if}}
        <a class="btn btn-danger d-flex ms-5" href="contact">Contact Me</a>

      </div>
    </div>
  </nav>
  <!-- End navbar -->

  {{!-- alerttt --}}
  {{#if messages.success}}
  <div class="alert alert-primary" role="alert">
    {{messages.success}}
  </div>
  {{/if}}

  {{#if messages.add-blog}}
  <div class="alert alert-primary" role="alert">
    {{messages.add-blog}}
  </div>
  {{/if}}


  {{#if messages.update}}
  <div class="alert alert-info" role="alert">
    {{messages.update}}
  </div>
  {{/if}}

  {{#if messages.hapus}}
  <div class="alert alert-danger" role="alert">
    {{messages.hapus}}
  </div>
  {{/if}}
  {{!-- alert --}}


  {{!-- blog CSS --}}
  <div class="blog">

    <div style="text-align: right; padding-right: 130px; margin-top: 50px">

      {{#if isLogin}}
      <a href="/add-blogs" style="
            background-color: rgb(5, 155, 5); 
            padding: 7px 20px; 
            border: none; 
            border-radius: 8px; 
            color: white;
            text-decoration: none">Add New Blog</a>
      {{/if}}
    </div>

    <div id="contents" class="blog-list">
      <!-- dynamic content would be here -->

      {{#each blogs}}
      <div class="blog-list-item">
        <div class="blog-image">
          <img src="{{this.image}}" alt="" />
        </div>
        <div class="blog-content">

          {{#if isLogin}}
          <div class="btn-group">
            <a class="btn btn-info " href="/blogs-edit/{{this.id}}">Edit Post</a>
            <a class="btn btn-danger" href="/delete-blogs/{{this.id}}">Delete Blog</a>
          </div>
          {{/if}}
          <h1>
            <a href="/blog-detail/{{this.id}}" target="_blank">{{this.title}}</a>
          </h1>
          <div class="detail-blog-content">
            {{this.post_at}} | {{this.author}}
          </div>
          <p>
            {{this.content}}
          </p>
          <div style="text-align: right">
            <span style="font-size: 15px; color: grey">1 hours ago</span>
          </div>
        </div>
      </div>
      {{/each}}
      <!-- End dynamic content would be here -->
    </div>
  </div>


  {{!-- end blog css --}}


  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>

</html>